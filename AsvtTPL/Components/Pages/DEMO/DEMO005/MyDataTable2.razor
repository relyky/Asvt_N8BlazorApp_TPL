
<MudTable Items=@elementList Breakpoint=Breakpoint.None Class=@Class HeaderClass="custom-secondary" Hover Striped Dense Elevation=0>
  <ToolBarContent>
    <MudText Typo=Typo.h6>Data Table 清單範例</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Outlined.Add" />
    <MudIconButton Icon="@Icons.Material.Outlined.Edit" />
    <MudIconButton Icon="@Icons.Material.Outlined.Remove" Color="Color.Inherit" />
    <MudIconButton Icon="@Icons.Material.Outlined.Settings" Color="Color.Inherit" />
  </ToolBarContent>
  <HeaderContent>
    <MudTh>Nr</MudTh>
    <MudTh>Sign</MudTh>
    <MudTh>Name</MudTh>
    <MudTh>Position</MudTh>
    <MudTh>Molar mass</MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="Nr">@context.Number</MudTd>
    <MudTd DataLabel="Sign">@context.Sign</MudTd>
    <MudTd DataLabel="Name">@context.Name</MudTd>
    <MudTd DataLabel="Position">@context.Position</MudTd>
    <MudTd DataLabel="Molar mass">@context.Molar</MudTd>
  </RowTemplate>
</MudTable>

@code {
  [Parameter] public string? Class { get; set; }

  List<Element> elementList = new List<Element>();

  protected override void OnInitialized()
  {
    elementList.Add(new Element { Number = 1, Sign = "H", Name = "Hydrogen", Position = 0, Molar = 1.00794 });
    elementList.Add(new Element { Number = 2, Sign = "He", Name = "Helium", Position = 17, Molar = 4.002602 });
    elementList.Add(new Element { Number = 3, Sign = "Li", Name = "Lithium", Position = 0, Molar = 6.941 });
    elementList.Add(new Element { Number = 4, Sign = "Be", Name = "Beryllium", Position = 1, Molar = 9.012182 });
    elementList.Add(new Element { Number = 5, Sign = "B", Name = "Boron", Position = 12, Molar = 10.81 });
    elementList.Add(new Element { Number = 6, Sign = "C", Name = "Carbon", Position = 13, Molar = 12.011 });
    elementList.Add(new Element { Number = 7, Sign = "N", Name = "Nitrogen", Position = 14, Molar = 14.007 });
  }

  class Element
  {
    public int Number { get; set; }
    public string Sign { get; set; } = "";
    public string Name { get; set; } = "";
    public int Position { get; set; }
    public double Molar { get; set; }
  }
}
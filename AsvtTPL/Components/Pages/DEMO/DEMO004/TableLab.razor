        new ElementInfo() { Number = 4, Sign = "Be", Name = "Beryllium", Position = 1, Molar = 9.012182 },
        new ElementInfo() { Number = 5, Sign = "B", Name = "Boron", Position = 12, Molar = 10.811 },
        new ElementInfo() { Number = 6, Sign = "C", Name = "Carbon", Position = 13, Molar = 12.0107 },
        new ElementInfo() { Number = 7, Sign = "N", Name = "Nitrogen", Position = 14, Molar = 14.0067 },
    };

  record ElementInfo
  {
    public int Number { get; set; }
    public string? Sign { get; set; }
    public string? Name { get; set; }
    public int Position { get; set; }
    public double Molar { get; set; }
  }

}

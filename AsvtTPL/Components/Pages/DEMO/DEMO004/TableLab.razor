@code {
  bool f_loading = false;
  bool f_hover = true;
  bool f_dense = true;
  bool f_striped = true;
  bool f_fordered = false;
  string headerClass = "custom-primary";
  // for DataGrid
  bool f_filterable = false;
  bool f_showColumnOptions = false;
  bool f_showFilterIcons = false;
  bool f_showMenuIcon = false;

  private IEnumerable<ElementInfo> elementList = new List<ElementInfo>()
    {
        new ElementInfo() { Number = 1, Sign = "H", Name = "Hydrogen", Position = 0, Molar = 1.00794 },

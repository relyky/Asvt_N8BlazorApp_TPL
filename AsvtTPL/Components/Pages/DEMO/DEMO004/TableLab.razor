
<MudToolBar>
  <MudSwitch Color=Color.Info @bind-Value=f_loading Label="Loading" />
  <MudSwitch Color=Color.Primary @bind-Value=f_hover Label="Hover" />
  <MudSwitch Color=Color.Secondary @bind-Value=f_dense Label="Dense" />
  <MudSwitch Color=Color.Tertiary @bind-Value=f_striped Label="Striped" />
  <MudSwitch Color=Color.Dark @bind-Value=f_fordered Label="Bordered" />

  <MudSelect T="string" @bind-Value=headerClass Variant=Variant.Outlined Margin=Margin.Dense>
    <MudSelectItem Value=@("")>選取底色</MudSelectItem>
    <MudSelectItem Value=@("custom-primary") />
    <MudSelectItem Value=@("custom-secondary") />
    <MudSelectItem Value=@("custom-tertiary") />
    <MudSelectItem Value=@("custom-dark") />
  </MudSelect>
</MudToolBar>

<MudSimpleTable Hover=f_hover Dense=f_dense Striped=f_striped Bordered=f_fordered Class="mb-3">
  <thead class="@headerClass">
    <tr>
      <th>Nr</th>
      <th>Sign</th>
      <th>Name</th>
      <th>Position</th>
      <th>Molar mass</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in elementList)
    {
      <tr>
        <td>@item.Number</td>
        <td>@item.Sign</td>
        <td>@item.Name</td>
        <td>@item.Position</td>
        <td>@item.Molar</td>
      </tr>
    }
  </tbody>
</MudSimpleTable>

<MudTable Items=elementList Loading=f_loading Hover=f_hover Dense=f_dense Striped=f_striped Bordered=f_fordered
          Class="mb-3" HeaderClass=@headerClass>
  <ToolBarContent>
    <MudText Typo=Typo.h6>MudTable</MudText>
  </ToolBarContent>
  <HeaderContent>
    <MudTh><MudTableSortLabel SortBy="new Func<ElementInfo, object>(x=>x.Number)">Nr</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ElementInfo, string?>(x=>x.Sign)">Sign</MudTableSortLabel></MudTh>
    <MudTh>Name</MudTh>
    <MudTh>Position</MudTh>
    <MudTh>Molar mass</MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="Nr">@context.Number</MudTd>
    <MudTd DataLabel="Sign">@context.Sign</MudTd>
    <MudTd DataLabel="Name">@context.Name</MudTd>
    <MudTd DataLabel="Position">@context.Position</MudTd>
    <MudTd DataLabel="Molar mass">@context.Molar</MudTd>
  </RowTemplate>
</MudTable>

<MudDataGrid Items=elementList Loading=f_loading Hover=f_hover Dense=f_dense Striped=f_striped Bordered=f_fordered
             SortMode=SortMode.Single
             ShowColumnOptions=f_showColumnOptions
             ColumnResizeMode=ResizeMode.None
             Filterable=f_filterable
             ShowFilterIcons=f_showFilterIcons
             ShowMenuIcon=f_showMenuIcon
             Class="mb-3" HeaderClass=@headerClass>
  <ToolBarContent>
    <MudText Typo=Typo.h6>MudDataGrid</MudText>
    <MudSwitch Color=Color.Info @bind-Value=f_filterable Label="Filterable" />
    <MudSwitch Color=Color.Info @bind-Value=f_showColumnOptions Label="ShowColumnOptions" />
    <MudSwitch Color=Color.Info @bind-Value=f_showFilterIcons Label="ShowFilterIcons" />
    <MudSwitch Color=Color.Info @bind-Value=f_showMenuIcon Label="ShowMenuIcon" />
  </ToolBarContent>
  <Columns>
    <PropertyColumn Property="m => m.Number" Title="Nr" />
    <PropertyColumn Property="m => m.Sign" Title="Sign" />
    <PropertyColumn Property="m => m.Name" Title="Name" />
    <PropertyColumn Property="m => m.Position" Title="Position" />
    <PropertyColumn Property="m => m.Molar" Title="Molar mass" />
  </Columns>
</MudDataGrid>


@inherits AsvtFieldBase<T>
@typeparam T
@* 只支援數值類型。 Only support [int][int?][decimal][decimal?][float][float?][double][double?]. *@

<MudItem xs=@_xs sm=@_sm md=@_md lg=@_lg xl=@_xl xxl=@_xxl Class=@ItemClass>
  <MudNumericField T=T
                   @bind-Value=@FieldValue
                   For=@For
                   Immediate=@Immediate
                   Label=@_label
                   ReadOnly=@_readOnly
                   HelperText=@HelperText
                   Required=@Required
                   Class=@Class
                   Variant=@(_readOnly ? Variant.Filled : Variant.Text)
                   Format=@Format
                   Step=@Step
                   />
</MudItem>

@code {
  /// <summary>
  /// 步進值:預設1。
  /// </summary>
  [Parameter] public T? Step { get; set; }

  [Parameter] public string? Format { get; set; }
}